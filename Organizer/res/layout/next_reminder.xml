<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >
      
<TextView
    android:id="@+id/textTitle"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10sp"
    android:text="Next Upcoming Reminder"
    android:textStyle="bold"
    android:textAppearance="?android:attr/textAppearanceMedium" />



<RelativeLayout
    android:id="@+id/nextReminderLayout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" 
    android:background="#002266"
    >

    <Button
        android:id="@+id/buttonView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="View" />

    <TextView
        android:id="@+id/textRemindTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/button1"
        android:text="Next Event"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/textRemindBottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/buttonView"
        android:layout_alignParentLeft="true"
        android:text="In X Minutes" />
</RelativeLayout>

<TextView
    android:id="@+id/textNoUpcoming"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="There are currently no Upcoming Reminders" /> 

    


</LinearLayout>
